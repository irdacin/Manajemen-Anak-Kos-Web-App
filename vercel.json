{
    "version": 2,
    "builds": [
        {
            "src": "SERVER/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "CLIENT/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/SERVER/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/CLIENT/dist/$1"
        }
    ]
}
